<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/tvOrdersTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Orders"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="#4A148C"
        android:paddingBottom="6dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Manage customer orders"
        android:textColor="#7B7B7B"
        android:textSize="14sp"
        android:paddingBottom="20dp" />

    <!-- Card 1: Check Order Status -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardCheckStatus"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginBottom="15dp"
        android:foreground="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:padding="16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Check Order Status"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#4A148C" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Track shipped orders"
                android:textColor="#7B7B7B"
                android:textSize="14sp"
                android:paddingTop="6dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Card 2: New Orders -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardNewOrders"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:foreground="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:padding="16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pending Orders"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#4A148C" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View new incoming orders"
                android:textColor="#7B7B7B"
                android:textSize="14sp"
                android:paddingTop="6dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
