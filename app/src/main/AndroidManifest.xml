<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.samarth_admin123">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">

        <!-- ✅ Home / App Launcher -->
        <activity
            android:name=".HomeActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- ✅ Authentication screens -->
        <activity android:name=".LoginActivity" android:exported="false" />
        <activity android:name=".SignUpActivity" android:exported="false" />

        <!-- ✅ Dashboard -->
        <activity android:name=".DashboardActivity" android:exported="false" />

        <!-- ✅ Orders System -->
        <activity android:name=".OrdersActivity" android:exported="false" />
        <activity android:name=".OrderDetailsActivity" android:exported="false" />
        <activity android:name=".OrderStatusActivity" android:exported="false" />
        <activity android:name=".PendingOrdersActivity" android:exported="false" />

        <!-- ✅ Customers -->
        <activity android:name=".CustomersActivity" android:exported="false" />
        <activity android:name=".CustomerDetailsActivity" android:exported="false" />

        <!-- ✅ Products -->
        <activity android:name=".ProductsActivity" android:exported="false" />
        <activity android:name=".ProductDetailsActivity" android:exported="false" />
        <activity android:name=".EditProductActivity" android:exported="false" />

        <!-- ✅ Reports -->
        <activity android:name=".ReportsActivity" android:exported="false" />

    </application>

</manifest>
